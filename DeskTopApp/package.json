{
  "name": "annonate-electron",
  "version": "1.0.0",
  "description": "Screen sharing with transparent overlay for real-time annotations",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["electron", "screen-share", "annotation", "overlay", "collaboration"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "peerjs": "^1.5.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.annonate.electron",
    "productName": "Annonate",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!**/node_modules/*/{CHANGELOG.md,README.md,*.map}",
      "!dist"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    }
  }
}

