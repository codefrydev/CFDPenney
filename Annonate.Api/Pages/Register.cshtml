@page
@model Annonate.Api.Pages.RegisterModel
@{
    ViewData["Title"] = "Create account";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create account</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', 'Segoe UI Web (West European)', -apple-system, BlinkMacSystemFont, Roboto, 'Helvetica Neue', sans-serif;
            overflow: hidden; 
            background-color: #f5f5f5;
            -webkit-font-smoothing: antialiased;
        }
        .login-bg {
            background-color: #e9e9e9;
            background-image: radial-gradient(circle at 50% 50%, #f3f3f3 0%, #e1e1e1 100%);
        }
        .login-card {
            background: white;
            padding: 44px;
            width: 440px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
            position: relative;
        }
        .login-input {
            width: 100%;
            border: none;
            border-bottom: 1px solid #666;
            padding: 8px 0;
            font-size: 15px;
            margin-bottom: 16px;
            transition: border-color 0.2s;
        }
        .login-input:focus {
            outline: none;
            border-bottom: 1px solid #0067b8;
        }
        .login-btn {
            background-color: #0067b8;
            color: white;
            border: none;
            padding: 8px 32px;
            font-size: 15px;
            cursor: pointer;
            float: right;
            transition: background-color 0.2s;
            min-width: 108px;
        }
        .login-btn:hover {
            background-color: #005da6;
        }
    </style>
</head>
<body class="h-screen w-screen relative">
    <div class="fixed inset-0 z-50 login-bg flex items-center justify-center font-['Segoe_UI']">
        <div class="login-card">
            <div class="mb-4">
                <img src="https://upload.wikimedia.org/wikipedia/commons/4/44/Microsoft_logo.svg" alt="Microsoft" class="h-6">
            </div>
            
            <h1 class="text-2xl font-semibold text-[#1b1b1b] mb-2">Create account</h1>
            <div id="register-error" class="hidden text-[#e81123] text-sm mb-4"></div>
            
            <input type="text" id="name-input" class="login-input" placeholder="Full name">
            <input type="text" id="email-input" class="login-input" placeholder="Email">
            <input type="password" id="password-input" class="login-input" placeholder="Password">
            
            <div class="text-[13px] text-[#1b1b1b] mb-4">
                Already have an account? <a href="/Login" class="text-[#0067b8] hover:underline">Sign in</a>
            </div>
            
            <div class="flex justify-end">
                <button class="login-btn" onclick="handleRegister()">Create account</button>
            </div>
        </div>
    </div>

    @Html.AntiForgeryToken()
    <script>
        async function handleRegister() {
            const name = document.getElementById('name-input').value;
            const email = document.getElementById('email-input').value;
            const password = document.getElementById('password-input').value;
            const error = document.getElementById('register-error');
            
            if (!name || !email || !password) {
                error.innerText = 'Please fill in all fields';
                error.classList.remove('hidden');
                return;
            }
            
            error.classList.add('hidden');
            
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
                const response = await fetch('@Url.Page("/Register", "Register")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({
                        name: name,
                        email: email,
                        password: password
                    })
                });

                const result = await response.json();
                
                if (result.success) {
                    window.location.href = '/Index';
                } else {
                    error.innerText = result.message || 'Registration failed';
                    error.classList.remove('hidden');
                }
            } catch (err) {
                console.error('Register error:', err);
                error.innerText = 'An error occurred. Please try again.';
                error.classList.remove('hidden');
            }
        }
    </script>
</body>
</html>
