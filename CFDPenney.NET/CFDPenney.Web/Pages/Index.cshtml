        },
        {
          "@@type": "Question",
          "name": "Is my data stored on servers?",
          "acceptedAnswer": {
            "@@type": "Answer",
            "text": "CFD Penney uses a server-based architecture with SignalR. Your drawings, annotations, video streams, and chat messages are transmitted in real-time through the server. Session data is stored temporarily in memory and is not persisted."
          }
        },
