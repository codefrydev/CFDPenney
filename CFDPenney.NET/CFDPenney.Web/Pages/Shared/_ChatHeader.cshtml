<header class="chat-header">
    <div class="chat-header-content">
        <div class="chat-header-left">
            <a href="/Canvas" class="chat-back-button" title="Back to Canvas">
                <i data-lucide="arrow-left" class="w-5 h-5"></i>
            </a>
            <h1 class="chat-header-title">
                <span class="font-extrabold">CFD</span>
                <span class="font-extrabold text-white bg-orange-500 px-2 py-0.5 transform -rotate-2 shadow-lg inline-block ml-1 rounded-md">Penney</span>
                <span class="chat-header-subtitle">Chat</span>
            </h1>
        </div>
        <div class="chat-header-right">
            <a asp-page="/SignOut" class="chat-header-button" title="Sign Out">
                <i data-lucide="log-out" class="w-5 h-5"></i>
            </a>
        </div>
    </div>
</header>
