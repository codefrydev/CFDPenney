@model ChatModel
@using CFDPenney.Web.Models

<div id="chat-details-panel" class="chat-details-panel @(Model.SelectedConversation == null ? "hidden" : "")">
    <div class="chat-details-header">
        <h3 class="chat-details-title">Details</h3>
        <button id="btn-close-details" class="chat-close-button" title="Close">
            <i data-lucide="x" class="w-5 h-5"></i>
        </button>
    </div>
    
    @if (Model.SelectedConversation != null)
    {
        <div class="chat-details-content">
            <div id="chat-session-details" class="chat-details-section">
                <h4 class="chat-details-section-title">Conversation Information</h4>
                <div class="chat-details-item">
                    <span class="chat-details-label">Name:</span>
                    <span class="chat-details-value">@Model.SelectedConversation.Name</span>
                </div>
                <div class="chat-details-item">
                    <span class="chat-details-label">Type:</span>
                    <span class="chat-details-value">@(Model.SelectedConversation.Type == ConversationType.Personal ? "Personal" : "Group")</span>
                </div>
                <div class="chat-details-item">
                    <span class="chat-details-label">Created:</span>
                    <span class="chat-details-value">@Model.SelectedConversation.CreatedAt.ToString("MMM d, yyyy")</span>
                </div>
                <div class="chat-details-item">
                    <span class="chat-details-label">Participants:</span>
                    <span class="chat-details-value">@Model.SelectedConversation.Participants.Count</span>
                </div>
            </div>
            
            <div id="chat-participants-details" class="chat-details-section">
                <h4 class="chat-details-section-title">Participants</h4>
                <div id="chat-details-participants-list" class="chat-participants-list">
                    @if (Model.SelectedConversation.Participants == null || !Model.SelectedConversation.Participants.Any())
                    {
                        <p class="chat-empty-text">No participants</p>
                    }
                    else
                    {
                        @foreach (var participant in Model.SelectedConversation.Participants)
                        {
                            <div class="chat-participant-item">
                                <div class="chat-participant-avatar" style="background-color: @participant.User.GetAvatarColor();">
                                    @participant.User.GetInitials()
                                    @if (participant.User.Presence?.Status == PresenceStatus.Online)
                                    {
                                        <div class="chat-presence-dot online"></div>
                                    }
                                </div>
                                <div class="chat-participant-name">@participant.User.DisplayName</div>
                                @if (participant.Role == ParticipantRole.Owner)
                                {
                                    <span class="chat-participant-role">Owner</span>
                                }
                                else if (participant.Role == ParticipantRole.Admin)
                                {
                                    <span class="chat-participant-role">Admin</span>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="chat-details-content">
            <p class="chat-empty-text">Select a conversation to view details</p>
        </div>
    }
</div>

